{
  "name": "zheng-vscode-plugin",
  "displayName": "zheng vscode plugin",
  "description": "vscode扩展开发demo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zheng.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "zheng.getCurrentFilePath",
        "title": "获取当前文件（夹）路径"
      },
      {
        "command": "zheng.testMenuShow",
        "title": "这个菜单仅在js文件中显示",
        "icon": {
          "dark": "./images/tool-light.svg",
          "light": "./images/tool-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "zheng.getCurrentFilePath",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId === javascript",
          "command": "zheng.testMenuShow",
          "group": "navigation@1"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId === javascript",
          "command": "zheng.testMenuShow",
          "group": "navigation@1"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId === javascript",
          "command": "zheng.testMenuShow",
          "group": "navigation@1",
          "alt": "zheng.helloWorld"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}